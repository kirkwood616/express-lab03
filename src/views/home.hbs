<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="/style.css" />
		<title>Home</title>
	</head>
	<body>
		<div id="container">
			<h1>Assignments</h1>
			<table>
				<thead>
					<th>Assignment</th>
					<th>Score</th>
					<th>Total</th>
					<th>Completed</th>
					<th>Actions</th>
				</thead>
				<tbody>
					{{#each assignments}}
						<tr>
							<td
								style="word-wrap: break-word;"
								class="columnName"
							>{{name}}</td>
							<td class="columnCenter">{{score}}</td>
							<td class="columnCenter">{{possible}}</td>
							{{#if completed}}
								<td class="columnCenter"><span class="check">âœ”</span></td>
							{{else}}
								<td class="columnCenter"></td>
							{{/if}}
							<td class="columnCenter"><a href="/edit/{{id}}">Edit</a>
								|
								<a href="/delete/{{id}}">Delete</a></td>
						</tr>
					{{/each}}
				</tbody>
			</table>
			<p><span class="bold">Overall Average: </span>
				{{average}}%
			</p>
			<p><a href="/add">Add an Assignment</a></p>
		</div>
	</body>
</html>